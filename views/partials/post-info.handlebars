  <div class="card mb-4">
      <div class="card-header">
        <h5>{{title}}</h5>
      </div>
      <div class="card-body">
        <p>{{content}}</p>
        <p class="text-muted" style ="font-size:smaller">posted by {{user.username}} on {{created_at}}, 
           {{#if vote_count}}
           {{vote_count}} upvotes
           {{else}}
           0 upvote
           {{/if}}
           | 
           <a href="/post/{{id}}">
             {{#if Comments.length}}
             {{Comments.length}} comments
             {{else}}
             0 comment
             {{/if}}
           </a>
        </p>
      </div>
  </div>