<div class ="container">
  {{#each posts}}
  <div class="card mb-4">
      <div class ="card-header">
        <div class ="row justify-content-around">
              <h5 class="col-sm-12 col-md-10">{{title}}</h5>
              <p class ="col-sm-12 col-md-2">Posted by {{username}} on {{created_at}}</p>
        </div>
      </div>
      <div class ="card-body">
          <p>{{content}}</p>
          <p>upvote {{vote_count}}</p>
          <a href="/post/{{id}}">{{comments.length}} comment(s)</a>
      </div>
  </div>
  {{/each}}
</div>